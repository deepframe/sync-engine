#!/usr/bin/env python
# remove accounts marked as deleted from the db.

import sys
import datetime


def main():
    # Load config before anything
    from inbox.config import load_config
    load_config()

    from inbox.models.session import session_scope
    from inbox.models.account import Account

    current_time = datetime.datetime.utcnow()
    grace_period = current_time - datetime.timedelta(days=10)

    with session_scope(ignore_soft_deletes=False) as db_session:
        accounts = db_session.query(Account).filter(
            Account.deleted_at < grace_period)

        entry_count = accounts.count()
        if entry_count == 0:
            sys.exit(0)

        print "The following accounts will be removed:"
        for account in accounts:
            print account.email_address

        while True:
            answer = raw_input("Continue? (Y/N) ")
            if answer == 'Y':
                break
            elif answer == 'N':
                sys.exit(0)
            else:
                continue

        for account in accounts:
            db_session.delete(account)
        db_session.commit()


main()
