#!/usr/bin/env python
import os
import shutil

import click


@click.command()
def clear_cache():
    # Load config before anything
    from inbox.config import load_config
    config = load_config()

    cache_basedir = config.get('CACHE_BASEDIR')

    print 'Removing all contents of {}...'.format(cache_basedir),
    shutil.rmtree(cache_basedir)
    os.mkdir(cache_basedir)
    print 'done!'

if __name__ == '__main__':
    clear_cache()
